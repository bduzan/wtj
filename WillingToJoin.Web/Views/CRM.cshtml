        <script src="/Scripts/kendo/2015.3.1111/jquery.min.js"></script>
        <script src="/Scripts/kendo/2015.3.1111/jszip.min.js"></script>

        @*<script src="/Scripts/kendo/2015.3.1111/kendo.all.min.js"></script>*@
        <script src=" /Scripts/kendo.all.min.js"></script>

        <script src="/Scripts/kendo/2015.3.1111/kendo.aspnetmvc.min.js"></script>
        <script src="/Scripts/kendo.modernizr.custom.js"></script>
    </head>
    <body>

        <!-- Wrapper-->
        <div id="wrapper">

            <!-- Navigation -->
            @Html.Partial("_CRM_Navigation")

            <!-- Page wraper -->
            <div id="page-wrapper" class="gray-bg">

                <!-- Top Navbar -->
                @Html.Partial("_CRM_TopNavbar")

                <!-- Main view  -->
                @RenderBody()

                <!-- Footer -->
                @Html.Partial("_CRM Footer")

            </div>
            <!-- End page wrapper-->

        </div>
        <!-- End wrapper-->
        @*@Scripts.Render("~/bundles/bootstrap")*@
        <script src="/Scripts/bootstrap.min.js"></script>

        @*@Scripts.Render("~/plugins/metsiMenu")*@
