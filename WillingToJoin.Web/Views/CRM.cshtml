        @*@Scripts.Render("~/bundles/inspinia")*@
        <script src="/Scripts/inspinia.js"></script>
        @RenderSection("scripts", required: false)
        <style>
            .k-grid td {
                padding: 15px 5px 15px 15px;
            }

            .k-grid-content {
                min-height: 300px !important;
            }
            div.k-window {                
                height: auto !important;
            }
            .nav > li > a:hover * {
                color: white;
            }

            .nav > li > a * {
                color: black;
            }
            ul.dropdown-menu form#logoutForm {
                float: left !important;
                padding: 6px 10px;
                text-align: left;
            }
            .k-widget.k-window {
                max-width: 800px !important;
                width: 97% !important;
                max-height: 90% !important;               
            }
            .navbar-default .nav > li > a.current {
                background-color: #293846;
                color: white;
            }                
                .navbar-default .nav > li > a.current span, .navbar-default .nav > li > a.current i {
                    color: white;
                }
            .nav-header {
                margin-bottom: 5px;
            }
            .k-textbox {
                margin-bottom: 15px;
            }
            label.k-checkbox-label + input + label.control-label {
                position: relative;
                top: 6px;
            }
            .k-edit-form-container .k-edit-buttons {
                z-index: 9;
            }
            @@media (max-width:767px) {
                div#page-wrapper {
                    padding: 0;
                }

                    div #page-wrapper > .k-grid-content {
                        padding: 0;
                    }

                .k-widget.k-window {
                    overflow-y: auto;
                    overflow-x: hidden;
                }

                div#page-wrapper > div.fill-heigh {
                    padding: 0;
                }
            }
        </style>
