                    <li data-target="#carousel-slider" data-slide-to="8"></li>
                    <li data-target="#carousel-slider" data-slide-to="9"></li>
                    
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/Content/images/banner/BoyShepherd-920x320.jpg" />
                    </div>
                    <div class="item">
                        <img src="~/Content/images/banner/CattleGrazing-960x320.jpg" />
                    </div>
