    </div>
</div>

<script>

      function initMap() {
          var myLatLng = { lat: -3.3681648, lng: 36.6975798 };

        var map = new google.maps.Map(document.getElementById('g-map'), {
          zoom: 3,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?callback=initMap">
</script>

